{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used,
               deprecated_function_calls, deprecated_functions]}.

{erl_opts, [{i, "src"},
            warnings_as_errors,
            warn_export_all,
            warn_unused_import,
            inline]}.

{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.
